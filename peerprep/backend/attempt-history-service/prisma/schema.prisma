generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AttemptStatus {
  OUT_OF_TIME
  SOLVED
  DISCONNECTED
}

model QuestionAttempt {
  attemptId       String        @id @default(uuid())
  userId          String
  connectedAtTime DateTime
  sharedCode      String?
  qnData          Json
  completedStatus AttemptStatus
  userNames       String[]

  @@index([userId])
  @@index([userId, connectedAtTime])
}

model UserAttemptSummary {
  userId         String  @id
  totalAttempted Int     @default(0)
  totalSolved    Int     @default(0)
}